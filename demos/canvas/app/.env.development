# By default, the canvas demo runs in demo mode (no server connection)
# To connect to a real Foundry instance, copy this file to .env.local and configure:

# Demo Mode (set to false to connect to real Foundry)
VITE_DEMO_MODE=true

# Foundry Configuration - Local dev proxy
VITE_FOUNDRY_URL=https://localhost:5173
VITE_FOUNDRY_CLIENT_ID=pack-demo-canvas
VITE_FOUNDRY_REDIRECT_URL=https://localhost:5173/auth/callback
VITE_FOUNDRY_ONTOLOGY_RID=ri.ontology.main.ontology.00000000-0000-0000-0000-000000000000

# Backend Foundry API (used by local dev proxy, empty will 404 or 503 in demo mode)
VITE_FOUNDRY_API_URL=

# PACK Configuration
VITE_PACK_DOCUMENT_TYPE_NAME=canvas-demo
# Filesystem type: ARTIFACTS (default) or COMPASS
VITE_PACK_FILE_SYSTEM_TYPE=ARTIFACTS
# If using Compass filesystem, set the parent folder RID where new documents will be created
VITE_PACK_PARENT_FOLDER_RID=

# Dev Server Configuration (Optional)
DEV_SERVER_PORT=5173
DEV_SERVER_HOST=localhost
