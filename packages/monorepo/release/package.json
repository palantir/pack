{
  "name": "@palantir/pack.monorepo.release",
  "private": true,
  "version": "0.10.3",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/palantir/pack.git"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./build/types/index.d.ts",
        "default": "./build/esm/index.js"
      },
      "default": "./build/esm/index.js"
    },
    "./*": {
      "import": {
        "types": "./build/types/public/*.d.ts",
        "default": "./build/esm/public/*.js"
      },
      "default": "./build/esm/public/*.js"
    }
  },
  "scripts": {
    "check-spelling": "cspell --quiet .",
    "clean": "rimraf .turbo build dist lib test-output *.tgz tsconfig.tsbuildinfo",
    "fix-lint": "eslint . --fix && dprint fmt --config $(find-up dprint.json)",
    "lint": "eslint ./src && dprint check --config $(find-up dprint.json) --allow-no-files",
    "lint:fix": "eslint ./src --fix && dprint fmt --config $(find-up dprint.json) --allow-no-files",
    "test": "vitest run --passWithNoTests -u",
    "test:watch": "vitest --passWithNoTests",
    "transpileEsm": "monorepo-transpile -f esm -m normal -t node",
    "transpileTypes": "tsc --emitDeclarationOnly",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "dependencies": {
    "@actions/exec": "^1.1.1",
    "@changesets/apply-release-plan": "^7.0.14",
    "@changesets/assemble-release-plan": "^6.0.9",
    "@changesets/changelog-git": "catalog:",
    "@changesets/config": "^3.1.2",
    "@changesets/git": "^3.0.4",
    "@changesets/pre": "^2.0.2",
    "@changesets/read": "^0.6.6",
    "@changesets/release-utils": "^0.2.6",
    "@manypkg/get-packages": "^1.1.3",
    "@octokit/core": "^6.1.6",
    "@octokit/plugin-throttling": "^9.6.1",
    "adm-zip": "^0.5.16",
    "chalk": "^5.6.2",
    "consola": "catalog:",
    "execa": "catalog:",
    "latest-version": "^9.0.0",
    "octokit": "^4.1.4",
    "p-filter": "^4.1.0",
    "p-map": "^7.0.4",
    "package-json": "^10.0.1",
    "pkg-versions": "^4.0.0",
    "resolve-from": "^5.0.0",
    "semver": "^7.7.2",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@changesets/types": "^6.1.0",
    "@palantir/pack.monorepo.transpile": "workspace:~",
    "@palantir/pack.monorepo.tsconfig": "workspace:~",
    "@types/adm-zip": "^0.5.7",
    "@types/mdast": "4.0.4",
    "@types/node": "catalog:",
    "@types/semver": "^7.7.1",
    "@types/yargs": "catalog:",
    "rimraf": "catalog:",
    "tslib": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "files": [],
  "module": "./build/esm/index.js",
  "types": "./build/esm/index.d.ts",
  "type": "module"
}
