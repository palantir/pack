{
  "name": "pack",
  "description": "TypeScript monorepo for Platform Application Capabilities Kit (PACK)",
  "author": "Palantir Technologies, Inc.",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "check": "turbo run check",
    "ci:publish": "./scripts/ci-publish.sh",
    "ci:publishSnapshot": "pnpm run prePublish && pnpm exec changeset version --snapshot && pnpm exec changeset publish --no-git-tag --snapshot --tag=next",
    "clean": "turbo run clean clean:turbo",
    "clean:turbo": "rimraf .turbo",
    "dprint": "dprint",
    "lint": "turbo run lint lint:docs",
    "lint:docs": "dprint check docs/**/*.md",
    "lint:docs:fix": "dprint fmt docs/**/*.md",
    "lint:fix": "turbo run lint:fix lint:docs:fix",
    "mrl:check": "monorepolint check",
    "mrl:fix": "monorepolint check --fix",
    "prepare": "husky",
    "test": "turbo run test",
    "turbo": "turbo"
  },
  "engines": {
    "node": ">=22.11.0",
    "pnpm": "=10.6.3"
  },
  "packageManager": "pnpm@10.6.3",
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.4",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/js": "^9.36.0",
    "@monorepolint/archetypes": "0.6.0-alpha.5",
    "@monorepolint/cli": "0.6.0-alpha.5",
    "@monorepolint/config": "0.6.0-alpha.5",
    "@monorepolint/core": "0.6.0-alpha.5",
    "@monorepolint/rules": "0.6.0-alpha.5",
    "@palantir/pack.monorepo.transpile": "workspace:~",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitest/coverage-v8": "^3.2.4",
    "dprint": "^0.50.2",
    "eslint": "^9.36.0",
    "eslint-config-turbo": "^2.5.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-security": "^3.0.1",
    "find-up": "^8.0.0",
    "find-up-cli": "^6.0.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "rimraf": "^6.0.1",
    "turbo": "^2.5.8",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.1",
    "vitest": "^3.2.4"
  }
}
