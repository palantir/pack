{
  "name": "pack",
  "description": "TypeScript monorepo for Platform Application Capabilities Kit (PACK)",
  "author": "Palantir Technologies, Inc.",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "check": "turbo run check",
    "ci:publish": "./scripts/ci-publish.sh",
    "ci:publishSnapshot": "pnpm run prePublish && pnpm exec changeset version --snapshot && pnpm exec changeset publish --no-git-tag --snapshot --tag=next",
    "clean": "turbo run clean clean:turbo",
    "clean:turbo": "rimraf .turbo",
    "cspell:all": "cspell . --quiet",
    "demo:canvas": "concurrently -n DEPS,APP -c blue,green \"node ./scripts/watch-dependencies.mjs '@demo/canvas.app^...'\" \"turbo run dev --filter=@demo/canvas.app\"",
    "lint": "turbo run lint lint:docs",
    "lint:docs": "dprint check docs/**/*.md",
    "lint:docs:fix": "dprint fmt docs/**/*.md",
    "lint:fix": "turbo run lint:fix lint:docs:fix",
    "mrl:check": "monorepolint check",
    "mrl:fix": "monorepolint check --fix",
    "prePublish": "turbo build && turbo lint",
    "prepare": "husky",
    "tag-release": "./scripts/tag-release.sh",
    "test": "turbo run test",
    "turbo": "turbo"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": "=10.6.3"
  },
  "packageManager": "pnpm@10.6.3",
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.5",
    "@babel/preset-typescript": "catalog:",
    "@changesets/changelog-git": "catalog:",
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^9.39.1",
    "@monorepolint/archetypes": "0.6.0-alpha.6",
    "@monorepolint/cli": "0.6.0-alpha.6",
    "@monorepolint/config": "0.6.0-alpha.6",
    "@monorepolint/core": "0.6.0-alpha.6",
    "@monorepolint/rules": "0.6.0-alpha.6",
    "@palantir/pack.monorepo.transpile": "workspace:~",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@vitest/coverage-v8": "^4.0.14",
    "chokidar": "^5.0.0",
    "concurrently": "^9.1.2",
    "cspell": "^9.4.0",
    "dprint": "^0.50.2",
    "eslint": "^9.39.1",
    "eslint-config-turbo": "^2.6.1",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-require-extensions": "^0.1.3",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-unused-imports": "^4.3.0",
    "find-up": "catalog:",
    "find-up-cli": "^6.0.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "rimraf": "catalog:",
    "turbo": "^2.6.1",
    "typescript": "catalog:",
    "typescript-eslint": "^8.48.0",
    "vitest": "catalog:"
  },
  "pnpm": {
    "overrides": {
      "trim@<0.0.3": ">=0.0.3"
    }
  }
}
